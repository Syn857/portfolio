<h1>Portfolio Items</h1>

<%= link_to "Create New Item", new_portfolio_path %>

<%= @portfolio_item.each do |f| %>
    <p><%= link_to f.title, portfolio_path(f) %></p>
    <p><%= f.subtitle %></p>
    <p><%= f.body %></p>
  <%= image_tag f.thumb_image unless f.thumb_image.nil? %>
  <%= link_to "Edit", edit_portfolio_path(f) %>
<% end %>

